{{outlet}}
<div class="coll-banner text-center">
    <div class="container">
        <h1 class="f-w-lg"> OSF Collections </h1>
        <p class="lead f-w-md">Integrate your research interests into groups</p>
    </div>
</div>
<div class="coll-add-layer">
    <div class="container">
        <div class="row">
            <div class="col-sm-4"><h3> Start a collection </h3></div>
            <div class="col-sm-5 m-t-md">{{input class="form-control" value=newCollectionTitle placeholder="Enter collection name" enter="enterPress"}}</div>
            <div class="col-sm-3 m-t-md"><button class="btn btn-primary" {{action 'addCollection'}}>Continue </button></div>
        </div>
    </div>
</div>
<div class="container">
    <div class="coll-toolbar row">
        <div class="col-xs-6"><h2> All collections</h2></div>
        <div class="col-xs-6">
            <div class="pull-right">{{input class="form-control" value=filterText key-up='filter' placeholder="Filter"}}  {{model.length}} results </div>
        </div>
        <!-- <input type=text placeholder="Filter collections" onkeyup={{action 'filter'}}> -->
    </div>
    <div class="coll-group">
        {{#each model as |item|}}
            <div class="coll-single">
                {{#link-to "collection" item.id class="btn btn-info pull-right"}}<span {{action 'clearFilter'}}>View</span>{{/link-to}}
                <h3>{{#link-to "collection" item.id}}<span {{action 'clearFilter'}}>{{item.title}}</span>{{/link-to}}</h3>
                <p>{{item.description}}</p>
                <div>
                    {{ item.tags}}
                </div>
            </div>
        {{/each}}
    </div>
</div>
